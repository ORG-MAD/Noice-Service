<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Register_Customer"
    android:background="@color/black">

    <TextView
        android:id="@+id/tv_heading"
        android:layout_width="219dp"
        android:layout_height="39dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="@string/tv_heading"
        android:textColor="@color/white"
        android:textSize="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.023" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="39dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:gravity="center"
        android:text="@string/tv_titleCreateAccount"
        android:textColor="@color/colorHeader"
        android:textSize="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.023" />

    <EditText
        android:id="@+id/et_username"
        android:layout_width="339dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="34dp"
        android:layout_marginLeft="34dp"
        android:layout_marginTop="150dp"
        android:layout_marginEnd="34dp"
        android:layout_marginRight="34dp"
        android:width="50dp"
        android:backgroundTint="@color/white"
        android:drawableStart="@drawable/ic_account"
        android:drawableLeft="@drawable/ic_account"
        android:focusable="true"
        android:foregroundGravity="center_vertical|clip_horizontal|center"
        android:gravity="center|center_horizontal"
        android:hint="Enter First Name"
        android:maxWidth="50dp"
        android:minWidth="50dp"
        android:textColor="@color/white"
        android:textColorHighlight="@color/white"
        android:textColorHint="@color/white"
        android:textSize="22dp" />

    <EditText
        android:id="@+id/et_password"
        android:layout_width="339dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="34dp"
        android:layout_marginLeft="34dp"
        android:layout_marginTop="210dp"
        android:layout_marginEnd="34dp"
        android:layout_marginRight="34dp"
        android:width="50dp"
        android:backgroundTint="@color/white"
        android:drawableStart="@drawable/ic_account"
        android:drawableLeft="@drawable/ic_account"
        android:focusable="true"
        android:foregroundGravity="center_vertical|clip_horizontal|center"
        android:gravity="center|center_horizontal"
        android:hint="Enter Last Name"
        android:maxWidth="50dp"
        android:minWidth="50dp"
        android:textColor="@color/white"
        android:textColorHighlight="@color/white"
        android:textColorHint="@color/white"
        android:textSize="22dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_bday"
        android:text="Date Of Birth:"
        android:textSize="22dp"
        android:layout_marginTop="290dp"
        android:layout_marginLeft="25dp"
        android:textColor="@color/white"
        />

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/et_date"
        android:hint="Select Date"
        android:textSize="22dp"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:layout_marginLeft="170dp"
        android:layout_marginTop="290dp"
        android:backgroundTint="@color/white"
        android:background="@color/white"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_gender"
        android:text="Gender:"
        android:textSize="22dp"
        android:layout_marginTop="355dp"
        android:layout_marginLeft="25dp"
        android:textColor="@color/white"
        />

    <ToggleButton
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/toggle"
        android:textOff="Male"
        android:textOn="Female"
        android:textSize="22dp"
        android:layout_marginTop="350dp"
        android:layout_marginLeft="168dp"/>

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/imageView"
        android:layout_marginTop="410dp"
        android:layout_marginLeft="170dp"/>

    <Button
        android:id="@+id/btn_continue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="610dp"
        android:background="@drawable/button_bg_rounded_corners"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:text="@string/btn_continue"
        android:textColor="@color/black"
        android:textSize="23dp"
        app:backgroundTint="@color/btncolor" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:itemBackground="@color/colorHeader"
        app:itemIconTint="@color/black"
        app:itemTextColor="@color/black"
        app:menu="@menu/menu_navigation" />



</RelativeLayout>