<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <RelativeLayout
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/req_bg">

            //Name prefix
            <TextView
                android:id="@+id/tv_reqPrefix"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="T"
                android:textColor="@color/black"
                android:textSize="16sp" />

        </RelativeLayout>

        //Customer Name
        <TextView
            android:id="@+id/tv_reqCustomerName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginStart="90dp"
            android:layout_marginLeft="90dp"
            android:paddingLeft="18dp"
            android:text="Customer Name"
            android:textColor="@color/headerColorD"
            android:textSize="16sp"
            android:textStyle="bold" />

        //TextOption to navigate to screens
        <TextView
            android:id="@+id/txt_option"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="12dp"
            android:layout_marginRight="5dp"
            android:text="&#8942;"
            android:textColor="@color/colorWhiteD"
            android:textSize="20sp" />

    </RelativeLayout>

</LinearLayout>