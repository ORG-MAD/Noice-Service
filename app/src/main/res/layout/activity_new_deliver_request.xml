<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:weightSum="9"
    android:background="@drawable/newrequestbg"
    android:layout_height="match_parent"
    tools:context=".NewDeliverRequest">

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:theme="@style/ToolBar"
            android:layout_height="?attr/actionBarSize">

            <TextView
                android:id="@+id/tv_heading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/tv_heading"
                android:textColor="@color/colorWhiteD"
                android:textSize="25dp" />

        </androidx.appcompat.widget.Toolbar>

    </LinearLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_generateReceipt"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@string/tv_newDeliveryReq"
            android:textAlignment="center"
            android:textColor="@color/colorWhiteD"
            android:textSize="22sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        android:layout_marginTop="10dp"
        android:padding="10dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            >

            <TextView
                android:id="@+id/tv_custName"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center_horizontal"
                android:text="@string/tv_custName"
                android:textAlignment="center"
                android:textColor="@color/colorWhiteD"
                android:textSize="20sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/et_customerName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="50dp"
                android:layout_marginRight="20sp"
                android:backgroundTint="@color/white"
                android:textColor="@color/colorWhiteD" />

            //Customer Id

            <TextView
                android:id="@+id/tv_customerIDtext"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="90dp"
                android:gravity="center_horizontal"
                android:text="@string/tv_customerID"
                android:textAlignment="center"
                android:textColor="@color/colorWhiteD"
                android:textSize="20sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/et_customerID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="120dp"
                android:layout_marginRight="20sp"
                android:backgroundTint="@color/white"
                android:textColor="@color/colorWhiteD" />

            //Contact Number

            <TextView
                android:id="@+id/tv_contactNumber"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="165dp"
                android:gravity="center_horizontal"
                android:text="@string/tv_contactNumber"
                android:textAlignment="center"
                android:textColor="@color/colorWhiteD"
                android:textSize="20sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/et_contactNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="195dp"
                android:layout_marginRight="20sp"
                android:backgroundTint="@color/white"
                android:textColor="@color/colorWhiteD" />

            //Vehicle Name

            <TextView
                android:id="@+id/tv_vehicleName"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="240dp"
                android:gravity="center_horizontal"
                android:text="@string/tv_vehicleName"
                android:textAlignment="center"
                android:textColor="@color/colorWhiteD"
                android:textSize="20sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/et_vehicleName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="270dp"
                android:layout_marginRight="20sp"
                android:backgroundTint="@color/white"
                android:textColor="@color/colorWhiteD" />

            //Location Details

            <TextView
                android:id="@+id/tv_bookingDetails"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="320dp"
                android:gravity="center_horizontal"
                android:text="@string/tv_locationDetails"
                android:textAlignment="center"
                android:textColor="@color/colorWhiteD"
                android:textSize="20sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/et_locationDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="350dp"
                android:layout_marginRight="20sp"
                android:backgroundTint="@color/white"
                android:textColor="@color/colorWhiteD" />

            <ImageView
                android:id="@+id/img_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="355dp"
                android:layout_marginRight="43dp"
                android:src="@drawable/ic_baseline_edit_location_24" />
        </RelativeLayout>

        <Button
            android:id="@+id/btn_newReq"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="460dp"
            android:layout_marginRight="50dp"
            android:backgroundTint="@color/buttonD"
            android:text="@string/btn_submit"
            android:textColor="@color/black" />

        </RelativeLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bottom_navigation"
        app:itemBackground="@color/colorHeader"
        app:itemIconTint="@color/black"
        app:itemTextColor="@color/black"
        app:menu="@menu/menu_navigation"
        android:layout_alignParentBottom = "true"
        />

</LinearLayout>