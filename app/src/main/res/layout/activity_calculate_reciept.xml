<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:weightSum="9"
    android:background="@drawable/background_bg"
    android:layout_height="match_parent"
    tools:context=".NewDeliverRequest">

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:theme="@style/ToolBar"
            android:layout_height="?attr/actionBarSize">

            <TextView
                android:id="@+id/tv_heading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/tv_heading"
                android:textColor="@color/colorWhiteD"
                android:textSize="25dp" />

        </androidx.appcompat.widget.Toolbar>

    </LinearLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_generateReceipt"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@string/tv_generateReceipt"
            android:textAlignment="center"
            android:textColor="@color/colorWhiteD"
            android:textSize="22sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:layout_weight="8"
        android:background="@color/black"
        android:padding="10dp">


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            //Customer Id

            <TextView
                android:id="@+id/tv_custName"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/tv_custName"
                android:textColor="@color/colorWhiteD"
                android:textSize="20sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/et_customerID"
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="170dp"
                android:backgroundTint="@color/white" />

            //Contact Number

            <TextView
                android:id="@+id/tv_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:text="@string/tv_date"
                android:textColor="@color/colorWhiteD"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/date_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="140dp"
                android:layout_marginTop="50dp"
                android:text="dd/mm/yyyy"
                android:textColor="@color/white"
                android:textSize="24sp" />

            <Button
                android:id="@+id/show_dialog"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="90dp"
                android:text="date" />

            //Vehicle Name
            //Location Details

            <TextView
                android:id="@+id/tv_bookingDetails"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="150dp"
                android:gravity="center_horizontal"
                android:text="@string/tv_additionalServices"
                android:textAlignment="center"
                android:textColor="@color/colorWhiteD"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_basePrice"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="185dp"
                android:text="@string/tv_basePrice"
                android:textColor="@color/colorWhiteD"
                android:textSize="20sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/et_basePrice"
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="170dp"
                android:layout_marginTop="180dp"
                android:backgroundTint="@color/white" />

            <TextView
                android:id="@+id/tv_additionalServices"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="240dp"
                android:text="@string/tv_additionalServices"
                android:textColor="@color/colorWhiteD"
                android:textSize="20sp"
                android:textStyle="bold" />

            <CheckBox
                android:id="@+id/checkBox"
                android:layout_width="116dp"
                android:layout_height="24dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="280dp"
                android:text="@string/checkBox"
                android:textColor="@color/white" />

            <CheckBox
                android:id="@+id/checkBox1"
                android:layout_width="116dp"
                android:layout_height="24dp"
                android:layout_marginLeft="150dp"
                android:layout_marginTop="280dp"
                android:text="@string/checkBox1"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/tv_deliveryFee"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="320dp"
                android:text="@string/tv_deliveryFee"
                android:textColor="@color/colorWhiteD"
                android:textSize="20sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/et_basePricetext"
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="170dp"
                android:layout_marginTop="300dp"
                android:backgroundTint="@color/white" />

            <Button
                android:id="@+id/btn_calcBill"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="360dp"
                android:layout_marginRight="50dp"
                android:backgroundTint="@color/buttonD"
                android:text="@string/btn_submit"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/tv_netAmount"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="420dp"
                android:gravity="center_horizontal"
                android:text="@string/tv_netAmount"
                android:textAlignment="center"
                android:textColor="@color/colorWhiteD"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_amount"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="460dp"
                android:gravity="center_horizontal"
                android:text="@string/tv_amount"
                android:textAlignment="center"
                android:textColor="@color/colorWhiteD"
                android:textSize="20sp" />
        </RelativeLayout>


    </RelativeLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bottom_navigation"
        app:itemBackground="@color/colorHeader"
        app:itemIconTint="@color/black"
        app:itemTextColor="@color/black"
        app:menu="@menu/menu_navigation"
        android:layout_alignParentBottom = "true"
        />

</LinearLayout>